<% if current_user %>
	<%= form_for [post, post.comments.new] do |f| %>
		<%= f.label 'Comment' %>
		<%= f.text_area :body, rows: 1, class: 'form-control', placeholder: "Enter comment" %>
	<br/>
	<div class="form-group">
		<%= f.submit "Post comment", class: 'btn btn-success'%>
	</div>
	<% end %>
<% end %>
